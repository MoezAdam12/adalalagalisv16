# Environment Configuration for Adalalegalis Frontend
# This file contains environment variables for the frontend application

# API Configuration
API_URL=http://localhost:3000/api
API_VERSION=v1
API_TIMEOUT=30000

# Authentication Configuration
AUTH_ENABLED=true
AUTH_TOKEN_EXPIRY=86400
AUTH_REFRESH_TOKEN_EXPIRY=604800
AUTH_COOKIE_SECURE=false
AUTH_COOKIE_DOMAIN=localhost

# Feature Flags
FEATURE_2FA_ENABLED=true
FEATURE_DOCUMENT_OCR=true
FEATURE_CASE_ANALYTICS=true
FEATURE_ADVANCED_SEARCH=true
FEATURE_CALENDAR_INTEGRATION=true

# Performance Configuration
CACHE_ENABLED=true
CACHE_MAX_AGE=300
LAZY_LOADING_ENABLED=true
BUNDLE_ANALYZER_ENABLED=false

# Logging Configuration
LOG_LEVEL=info
LOG_API_CALLS=true
LOG_ERRORS=true
LOG_PERFORMANCE=true

# UI Configuration
UI_THEME=default
UI_LANGUAGE=ar
UI_RTL_ENABLED=true
UI_ANIMATIONS_ENABLED=true

# Third-party Integrations
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=
HOTJAR_ID=

# Development Tools
DEV_TOOLS_ENABLED=true
MOCK_API_ENABLED=false
