EMAIL_VERIFICATION_SECRET=adalalegalis_email_verification_secret_key_dev_only_change_in_production
EMAIL_VERIFICATION_EXPIRATION=24h
SESSION_SECRET=adalalegalis_session_secret_key_dev_only_change_in_production
SESSION_EXPIRATION=24h

# تكوين CORS
CORS_ORIGIN=http://localhost:4200




# تكوين التخزين
STORAGE_TYPE=local
STORAGE_BUCKET=adalalegalis-storage

# تكوين الأمان
ENABLE_RATE_LIMIT=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
ENABLE_HELMET=true
ENABLE_XSS_PROTECTION=true
ENABLE_CSRF_PROTECTION=true

# تكوين التسجيل
LOG_LEVEL=info

# تكوين المراقبة
ENABLE_MONITORING=false

# تكوين التشفير
ENCRYPTION_KEY=adalalegalis_encryption_key_dev_only_change_in_production

# تكوين المصادقة الثنائية
ENABLE_2FA=true

# تكوين الاشتراكات
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# تكوين التكاملات الخارجية
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# تكوين الذاكرة المؤقتة
REDIS_URL=redis://localhost:6379
ENABLE_CACHE=true

# تكوين الأداء
CLUSTER_MODE=false

# تكوين الأمان الإضافي
CONTENT_SECURITY_POLICY=true
HSTS_ENABLED=true
HSTS_MAX_AGE=15552000

# تكوين قائمة الرفض للرموز المميزة
TOKEN_BLACKLIST_ENABLED=true

# تكوين تشفير البيانات
DATA_ENCRYPTION_ENABLED=true

# تكوين كشف التسلل
INTRUSION_DETECTION_ENABLED=true

# تكوين الحماية من هجمات DDoS
DDOS_PROTECTION_ENABLED=true

# تكوين إدارة الجلسة
SESSION_INVALIDATION_ENABLED=true

# تكوين رؤوس HTTP الأمنية
SECURITY_HEADERS_ENABLED=true
