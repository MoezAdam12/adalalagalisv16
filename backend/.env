# Environment Configuration for Adalalegalis Backend
# This file contains environment variables for the backend application

# Server Configuration
PORT=3000
NODE_ENV=development
HOST=0.0.0.0
CORS_ORIGIN=http://localhost:4200

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=adalalegalis
DB_USER=postgres
DB_PASSWORD=postgres_password
DB_SSL=false

# Authentication Configuration
JWT_SECRET=change_this_to_a_secure_random_string_in_production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d
BCRYPT_SALT_ROUNDS=10

# Security Configuration
CSRF_PROTECTION=true
CSRF_TOKEN_EXPIRY=24h
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
HELMET_ENABLED=true
CONTENT_SECURITY_POLICY_ENABLED=true

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=user@example.com
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@adalalegalis.com

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=uploads
STORAGE_S3_BUCKET=adalalegalis-files
STORAGE_S3_REGION=us-east-1
STORAGE_S3_ACCESS_KEY=your_access_key
STORAGE_S3_SECRET_KEY=your_secret_key

# Feature Flags
FEATURE_2FA_ENABLED=true
FEATURE_DOCUMENT_OCR=true
FEATURE_CASE_ANALYTICS=true
FEATURE_ADVANCED_SEARCH=true

# Third-party Integrations
SENTRY_DSN=
ELASTICSEARCH_URL=http://localhost:9200

# Encryption Configuration
ENCRYPTION_KEY=change_this_to_a_secure_32_byte_key_in_production
ENCRYPTION_IV=change_this_to_a_secure_16_byte_iv_in_production
ENCRYPTION_ALGORITHM=aes-256-cbc
