# بيئة الإنتاج
NODE_ENV=production

# إعدادات الخادم
PORT=3000
HOST=0.0.0.0
API_URL=https://api.adalalegalis.com/api
API_VERSION=v1
CORS_ORIGIN=https://adalalegalis.com

# إعدادات قاعدة البيانات
DB_HOST=localhost
DB_PORT=3306
DB_NAME=adalalegalis
DB_USER=adalalegalis
DB_PASSWORD=admin@123

# إعدادات JWT
JWT_SECRET=CHANGE_THIS_SECRET_KEY_IN_PRODUCTION
JWT_EXPIRATION=3600
REFRESH_TOKEN_SECRET=CHANGE_THIS_REFRESH_SECRET_KEY_IN_PRODUCTION
REFRESH_TOKEN_EXPIRATION=604800

# إعدادات CSRF
CSRF_SECRET=CHANGE_THIS_CSRF_SECRET_KEY_IN_PRODUCTION

# إعدادات HMAC
HMAC_SECRET=CHANGE_THIS_HMAC_SECRET_KEY_IN_PRODUCTION

# إعدادات البريد الإلكتروني
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=admin@adalalegalis.com
SMTP_PASS=Mh1451991Mh@#123
EMAIL_FROM=admin@adalalegalis.com
EMAIL_FROM_NAME=Adalalegalis

# إعدادات تخزين الملفات
STORAGE_TYPE=s3
STORAGE_PATH=/var/adalalegalis/uploads
MAX_FILE_SIZE=10485760 # 10MB

# إعدادات S3
S3_BUCKET=adalalegalis-prod
S3_REGION=me-south-1
S3_ACCESS_KEY=CHANGE_THIS_ACCESS_KEY_IN_PRODUCTION
S3_SECRET_KEY=CHANGE_THIS_SECRET_KEY_IN_PRODUCTION

# إعدادات الأمان
RATE_LIMIT_WINDOW=15 # بالدقائق
RATE_LIMIT_MAX=100
BCRYPT_SALT_ROUNDS=12
ENABLE_2FA=true
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_KEY_IN_PRODUCTION
SESSION_TIMEOUT=30 # بالدقائق

# إعدادات التسجيل
LOG_LEVEL=error
LOG_FILE_PATH=/var/log/adalalegalis
ENABLE_REQUEST_LOGGING=false
ENABLE_ERROR_LOGGING=true

# إعدادات الإشعارات
ENABLE_PUSH_NOTIFICATIONS=true
PUSH_PUBLIC_KEY=CHANGE_THIS_PUBLIC_KEY_IN_PRODUCTION
PUSH_PRIVATE_KEY=CHANGE_THIS_PRIVATE_KEY_IN_PRODUCTION
ENABLE_SMS_NOTIFICATIONS=true
SMS_API_KEY=CHANGE_THIS_API_KEY_IN_PRODUCTION

# إعدادات بوابة الدفع
PAYMENT_GATEWAY=production
PAYMENT_TEST_MODE=false
PAYMENT_API_KEY=CHANGE_THIS_API_KEY_IN_PRODUCTION
PAYMENT_SECRET_KEY=CHANGE_THIS_SECRET_KEY_IN_PRODUCTION

# إعدادات الميزات
ENABLE_AI_ASSISTANT=true
ENABLE_DOCUMENT_OCR=true
ENABLE_VOICE_COMMANDS=false
ENABLE_CONTRACT_ANALYSIS=true

# إعدادات التصحيح
DEBUG=false
DEBUG_REQUESTS=false
DEBUG_RESPONSES=false
DEBUG_DATABASE=false
