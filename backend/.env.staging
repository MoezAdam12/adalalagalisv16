# بيئة الاختبار
NODE_ENV=staging

# إعدادات الخادم
PORT=3000
HOST=0.0.0.0
API_URL=https://staging-api.adalalegalis.com/api
API_VERSION=v1
CORS_ORIGIN=https://staging.adalalegalis.com

# إعدادات قاعدة البيانات
DB_HOST=localhost
DB_PORT=3306
DB_NAME=adalalegalis
DB_USER=adalalegalis
DB_PASSWORD=admin@123

# إعدادات JWT
JWT_SECRET=staging_jwt_secret_key_change_this
JWT_EXPIRATION=3600
REFRESH_TOKEN_SECRET=staging_refresh_token_secret_key_change_this
REFRESH_TOKEN_EXPIRATION=604800

# إعدادات CSRF
CSRF_SECRET=staging_csrf_secret_key_change_this

# إعدادات HMAC
HMAC_SECRET=staging_hmac_secret_key_change_this

# إعدادات البريد الإلكتروني
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=admin@adalalegalis.com
SMTP_PASS=Mh1451991Mh@#123
EMAIL_FROM=admin@adalalegalis.com
EMAIL_FROM_NAME=Adalalegalis

# إعدادات تخزين الملفات
STORAGE_TYPE=s3
STORAGE_PATH=/var/adalalegalis/staging/uploads
MAX_FILE_SIZE=10485760 # 10MB

# إعدادات S3
S3_BUCKET=adalalegalis-staging
S3_REGION=me-south-1
S3_ACCESS_KEY=staging_s3_access_key_change_this
S3_SECRET_KEY=staging_s3_secret_key_change_this

# إعدادات الأمان
RATE_LIMIT_WINDOW=15 # بالدقائق
RATE_LIMIT_MAX=100
BCRYPT_SALT_ROUNDS=12
ENABLE_2FA=true
SESSION_SECRET=staging_session_secret_key_change_this
SESSION_TIMEOUT=30 # بالدقائق

# إعدادات التسجيل
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/adalalegalis/staging
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true

# إعدادات الإشعارات
ENABLE_PUSH_NOTIFICATIONS=true
PUSH_PUBLIC_KEY=staging_push_public_key_change_this
PUSH_PRIVATE_KEY=staging_push_private_key_change_this
ENABLE_SMS_NOTIFICATIONS=true
SMS_API_KEY=staging_sms_api_key_change_this

# إعدادات بوابة الدفع
PAYMENT_GATEWAY=staging
PAYMENT_TEST_MODE=true
PAYMENT_API_KEY=staging_payment_api_key_change_this
PAYMENT_SECRET_KEY=staging_payment_secret_key_change_this

# إعدادات الميزات
ENABLE_AI_ASSISTANT=true
ENABLE_DOCUMENT_OCR=true
ENABLE_VOICE_COMMANDS=true
ENABLE_CONTRACT_ANALYSIS=true

# إعدادات التصحيح
DEBUG=true
DEBUG_REQUESTS=true
DEBUG_RESPONSES=true
DEBUG_DATABASE=true
